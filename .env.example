# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://xxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=xxx                   # Publishable Key (sb_publishable_...)
SUPABASE_SERVICE_ROLE_KEY=xxx                       # Secret Key (sb_secret_...) â€“ Server-only, never expose

# Database (Drizzle ORM)
DATABASE_URL=postgresql://postgres:password@db.xxx.supabase.co:5432/postgres

# App
NEXT_PUBLIC_APP_DOMAIN=localhost:3001    # Production: app-domain.com
NEXT_PUBLIC_APP_URL=http://localhost:3001

# n8n
N8N_WEBHOOK_URL=https://n8n.your-server.com/webhook/xxx
N8N_WEBHOOK_SECRET=xxx                  # Shared secret for auth

# Resend (Email)
RESEND_API_KEY=xxx
RESEND_FROM_EMAIL=noreply@app-domain.com

# Secrets Encryption (for integration_secrets table)
# Generate: openssl rand -base64 32
SECRETS_ENCRYPTION_KEY=

# Impersonation Cookie Signing (required for superadmin impersonation)
# Generate: openssl rand -base64 32
IMPERSONATION_SECRET=

# next-intl
NEXT_PUBLIC_DEFAULT_LOCALE=de
